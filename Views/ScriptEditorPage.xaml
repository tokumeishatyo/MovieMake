<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MovieMake.Views.ScriptEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MovieMake.Views"
    xmlns:vm="using:MovieMake.ViewModels"
    xmlns:models="using:MovieMake.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MovieMake.Converters"
    mc:Ignorable="d"
    x:Name="RootPage">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <TextBlock Text="Script Editor" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            <Button Command="{Binding LoadScriptCommand}" Content="Load"/>
            <Button Command="{Binding SaveScriptCommand}" Content="Save"/>
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding CurrentScript.Lines}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Line">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Character Selector. Needs binding to ancestor's AvailableCharacters? 
                             WinUI 3 x:Bind to ancestor is tricky in DataTemplate. 
                             Using ElementName binding to the Page's DataContext. 
                        -->
                        <ComboBox Grid.Column="0" 
                                  ItemsSource="{Binding DataContext.AvailableCharacters, ElementName=RootPage}"
                                  SelectedValue="{Binding CharacterId, Mode=TwoWay}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  PlaceholderText="Select Char"
                                  HorizontalAlignment="Stretch"/>

                        <TextBox Grid.Column="1" Text="{Binding Text, Mode=TwoWay}" Margin="10,0" PlaceholderText="Enter dialogue..."/>

                        <Button Grid.Column="2" Content="X" 
                                Command="{Binding DataContext.RemoveLineCommand, ElementName=RootPage}"
                                CommandParameter="{Binding}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="2" Command="{Binding AddLineCommand}" Content="Add Line" Margin="0,10,0,0"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
             <ProgressRing IsActive="{Binding IsRendering}" Visibility="{Binding IsRendering, Converter={StaticResource BoolToVisConverter}}"/>
             <Button Command="{Binding RenderVideoCommand}" Content="Render Video" IsEnabled="{Binding IsRendering, Converter={StaticResource BoolNegationConverter}}" Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
